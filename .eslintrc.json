{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
      "plugins": [
        "@babel/plugin-syntax-import-assertions"
      ]
    }
  },
  "plugins": [
    "prettier",
    "json-format"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {},
      {
        "usePrettierrc": true
      }
    ],
    "no-console": [
      1,
      {
        "allow": [
          "info",
          "error"
        ]
      }
    ],
    "no-debugger": 1,
    "require-atomic-updates": 0,
    "import/extensions": [
      "warn",
      "always",
      {
        "js": "always",
        "json": "always"
      }
    ]
  }
}
